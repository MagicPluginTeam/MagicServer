<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="MagicPlugin Image List"/>
    <meta property="og:image" content="/public/assets/img/logo.png"/>

    <title>Image List Â· Magic Plugin</title>

    <link href="../../../public/assets/css/style.css" rel="stylesheet">
    <link href="../../../public/assets/css/admin-image-list.css" rel="stylesheet">
    <link href="../../../public/assets/img/logo.png" rel="shortcut icon">
</head>
<body>
<main>
    <%- include("../../include/header.html"); %>

    <main class="m-5">
        <div class="row GmarketSansMedium">
            <% if(images.length === 0) { %>
                <p class="GmarketSansMedium">Oops! Nothing's in here.</p>
            <% } else { %>
                <% for(let i = 0; i < images.length; i++) { %>
                    <div class="card">
                        <a href="/images/<%= images[i] %>">
                            <img src="/images/<%= images[i] %>" class="card-img" alt="...">
                        </a>
                        <div class="card-info">
                            <a href="/api/file/delete/<%= images[i] %>" style="width: 100%;">
                                <button type="button" class="btn btn-sm btn-outline-danger btn-delete">
                                    Delete
                                </button>
                            </a>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </main>

    <%- include("../../include/footer.html"); %>
</main>
</body>
</html>
